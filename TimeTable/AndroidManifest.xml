<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aureole.timetable"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <provider android:name="TimetableProvider" android:authorities="com.aureole.timetableProvider" android:exported="false"/>
        <activity
            android:name="com.aureole.timetable.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.aureole.timetable.activities.NewTimerActivity"
            android:label="@string/title_activity_new_timer"
            android:parentActivityName="com.aureole.timetable.activities.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aureole.timetable.activities.MainActivity" />
        </activity>
        <activity
            android:name="com.aureole.timetable.activities.StationDetailActivity"
            android:label="@string/title_activity_station_detail"
            android:parentActivityName="com.aureole.timetable.activities.NewTimerActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.aureole.timetable.activities.NewTimerActivity" />
        </activity>
        <activity
            android:name="com.aureole.timetable.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <receiver android:name="com.aureole.timetable.TimeTableAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.aureole.timetable.APPWIDGET_UPDATE_SECOND" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget" />
        </receiver>

        <activity
            android:name="com.aureole.timetable.DetailTimeActivity"
            android:label="@string/title_activity_detail_time" >
        </activity>
    </application>

</manifest>